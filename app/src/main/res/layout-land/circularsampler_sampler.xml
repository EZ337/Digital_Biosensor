<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/samplerConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/samplerStick"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:rotation="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icons8_color_dropper_80" />

    <ImageView
        android:id="@+id/samplerTarget"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="-15dp"
        android:layout_marginTop="-15dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@+id/samplerStick"
        app:layout_constraintTop_toTopOf="@+id/samplerStick"
        app:srcCompat="@drawable/icons8_center_of_gravity_30" />

    <TextView
        android:id="@+id/samplerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/samplerStick"
        app:layout_constraintStart_toStartOf="@+id/samplerStick"
        app:layout_constraintTop_toBottomOf="@+id/samplerStick" />

</androidx.constraintlayout.widget.ConstraintLayout>