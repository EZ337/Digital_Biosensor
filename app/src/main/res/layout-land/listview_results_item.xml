<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/sampleLabel"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="SAMPLE" />

        <TextView
            android:id="@+id/RGBLabel"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_marginStart="35dp"
            android:gravity="center_vertical"
            android:text="AVG. RGB" />

        <TextView
            android:id="@+id/RPointLabelTitle"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginStart="35dp"
            android:gravity="center_vertical"
            android:text="AVG. R Val" />

        <TextView
            android:id="@+id/RPointSTDLabel"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginStart="35dp"
            android:gravity="center_vertical"
            android:text="R Val STD" />

        <TextView
            android:id="@+id/comparisonValueLabel"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_marginStart="35dp"
            android:gravity="center_vertical"
            android:text="Comparative Val" />

        <TextView
            android:id="@+id/transformedValueLabel"
            android:layout_width="145dp"
            android:layout_height="35dp"
            android:layout_marginStart="35dp"
            android:gravity="center_vertical"
            android:text="Transformed Val" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
